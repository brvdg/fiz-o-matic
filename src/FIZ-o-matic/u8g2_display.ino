  if ( !SPI_lock ) {
    SPI_lock = true;
    //TRACE_PRINTLN(F("#->display_update"));
    u8g2.firstPage();
    do {
      display_draw();
    } while ( u8g2.nextPage() );
    SPI_lock = false;
  }
}


